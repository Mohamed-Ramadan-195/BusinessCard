<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.BusinessCard" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/card</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_weight">1</item>
    </style>


    /////////////////////////////////////////////////////////
    <style name="textView">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textView.Name">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/name</item>
    </style>
    <style name="textView.Details">
        <item name="android:textSize">@dimen/details</item>
    </style>
    <style name="textView.Details.InLinearLayout">
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="textView.Details.InLinearLayout.ByDrawable">
        <item name="android:drawablePadding">@dimen/drawablePadding</item>
    </style>
    <style name="textView.Details.InLinearLayout.NotByDrawable">
        <item name="android:padding">4dp</item>
    </style>
</resources>